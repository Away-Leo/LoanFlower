<?xml version="1.0" encoding="utf-8"?>

                                                       

    <LinearLayout

        style="@style/MatchMatch.Vertical"
        android:background="@color/grey_line" android:tag="layout/activity_user_info_sencond_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

        <include layout="@layout/local_top_view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/icon_user_info_xinatiao"
            android:orientation="horizontal"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/WrapWrap"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/icon_gougou"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="@string/basic_info"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/WrapWrap"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/icon_second_h"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="@string/job_info"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/WrapWrap"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/icon_third"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="@string/credit_info"/>

            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/line_vertical_1dp_2"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white">

            <TextView
                style="@style/WrapWrap"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:text="@string/education_level"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <RelativeLayout
                android:id="@+id/rl_education"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp">

                <TextView
                    android:id="@+id/tv_education"
                    style="@style/WrapWrap"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv2"
                    android:text="@string/please_choose"
                    android:textSize="16sp"
                    tools:ignore="RtlHardcoded"/>

                <ImageView
                    android:id="@+id/iv2"
                    style="@style/WrapWrap"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_arrow"
                    tools:ignore="ContentDescription"/>
            </RelativeLayout>


        </RelativeLayout>

        <include layout="@layout/line_vertical_1dp_2"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white">

            <TextView
                style="@style/WrapWrap"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:text="@string/society_identity"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <RelativeLayout
                android:id="@+id/rl_job"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp">

                <TextView
                    android:id="@+id/tv_job"
                    style="@style/WrapWrap"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv3"
                    android:text="@string/please_choose"
                    android:textSize="16sp"
                    tools:ignore="RtlHardcoded"/>

                <ImageView
                    android:id="@+id/iv3"
                    style="@style/WrapWrap"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_arrow"
                    tools:ignore="ContentDescription"/>
            </RelativeLayout>

        </RelativeLayout>

        <include layout="@layout/line_vertical_1dp_2"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white">

            <TextView
                style="@style/WrapWrap"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:text="@string/income"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/ed_income"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="20dp"
                android:gravity="center_vertical|end"
                android:singleLine="true"
                android:background="@null"
                android:hint="@string/please_input"
                android:inputType="number"
                android:textSize="16sp"
                tools:ignore="RelativeOverlap,RtlSymmetry"/>

        </RelativeLayout>

        <include layout="@layout/line_vertical_1dp_2"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white">

            <TextView
                style="@style/WrapWrap"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:text="@string/is_social_security"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <ch.ielse.view.SwitchView
                android:id="@+id/sw_insurance"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="14dp"/>

        </RelativeLayout>

        <include layout="@layout/line_vertical_1dp_2"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white">

            <TextView
                style="@style/WrapWrap"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:text="@string/is_accumulation_fund"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <ch.ielse.view.SwitchView
                android:id="@+id/sw_accumulation"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="14dp"/>

        </RelativeLayout>

        <include layout="@layout/line_vertical_1dp_2"/>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shap_login"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="16sp"/>

    </LinearLayout>
         