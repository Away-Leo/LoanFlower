<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchWrap"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:padding="10dp"
        android:background="@drawable/ripple_bg"
        style="@style/MatchWrap">
        <TextView
            android:id="@+id/tv_title"
            android:layout_toLeftOf="@+id/iv_information"
            android:layout_marginEnd="10dp"
            style="@style/MatchWrap"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="感谢您使用我们的产品"
            tools:ignore="RtlHardcoded"/>

        <ImageView
            android:id="@+id/iv_information"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/icon_new_information"
            style="@style/WrapWrap"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_below="@+id/tv_title"
            tools:text="2017-06-18  13:00:00"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            style="@style/MatchWrap"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_below="@+id/tv_time"
            tools:text="1231321321231231213132123123132121321321321145646546556454654"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginBottom="6dp"
            style="@style/MatchWrap"/>

        <View
            android:id="@+id/view_line"
            android:layout_below="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_line" />


        <RelativeLayout
            android:layout_marginTop="6dp"
            android:layout_below="@+id/view_line"
            style="@style/MatchWrap">

            <TextView
                android:layout_centerVertical="true"
                android:text="@string/see_information"
                style="@style/WrapWrap" />

            <ImageView
                android:layout_alignParentEnd="true"
                android:src="@mipmap/icon_arrow"
                style="@style/WrapWrap"
                tools:ignore="ContentDescription"/>

        </RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>
