<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        style="@style/MatchMatch.Vertical"
        android:background="@drawable/shap_loan_bg">

        <RelativeLayout
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/tv_topview_title"
                style="@style/WrapWrap"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="12dp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="18sp"/>

        </RelativeLayout>


        <com.pingxundata.answerliu.pxcore.view.MyNestedScrollView
            style="@style/MatchMatch">


            <LinearLayout
                style="@style/MatchWrap.Vertical">

                <LinearLayout
                    style="@style/MatchWrap.Vertical"
                    android:layout_margin="10dp"
                    android:background="@mipmap/loan_bg">

                    <TextView
                        style="@style/MatchWrap"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:text="贷款金额"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>

                    <RelativeLayout
                        style="@style/MatchWrap"
                        android:layout_marginTop="6dp">

                        <ImageView
                            android:id="@+id/iv_subtract"
                            style="@style/WrapWrap"
                            android:layout_marginStart="70dp"
                            android:padding="6dp"
                            android:src="@mipmap/icon_subtract"/>

                        <TextView
                            android:id="@+id/tv_loan"
                            style="@style/WrapWrap"
                            android:layout_centerInParent="true"
                            android:textColor="@color/tab_font_bright"
                            android:textSize="18sp"
                            tools:text="10000元"/>

                        <ImageView
                            android:id="@+id/iv_add"
                            style="@style/WrapWrap"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="70dp"
                            android:padding="6dp"
                            android:src="@mipmap/icon_add"/>

                    </RelativeLayout>


                    <RelativeLayout
                        style="@style/MatchWrap"
                        android:layout_marginTop="6dp">

                        <TextView
                            android:id="@+id/tv_min_loan"
                            style="@style/WrapWrap"
                            android:layout_marginStart="40dp"
                            tools:text="最小额度1000元"/>

                        <TextView
                            android:id="@+id/tv_max_loan"
                            style="@style/WrapWrap"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="40dp"
                            tools:text="最大额度10000元"/>

                    </RelativeLayout>


                    <RelativeLayout
                        style="@style/MatchWrap"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            style="@style/WrapWrap.Horizontal"
                            android:layout_marginStart="40dp">

                            <TextView
                                style="@style/WrapWrap"
                                android:text="贷款期限"
                                android:textColor="@color/black"/>

                            <TextView
                                style="@style/WrapWrap"
                                android:text="(1月-12月)"/>

                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_choose_time_limit"
                            style="@style/WrapWrap"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="40dp"
                            android:drawableEnd="@mipmap/icon_arrow"
                            android:drawablePadding="20dp"
                            android:text="1个月"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_apply"
                        style="@style/WrapWrap"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:background="@mipmap/icon_loan_btn_bg"
                        android:gravity="center"
                        android:text="@string/immediately_apply"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>


                    <LinearLayout
                        style="@style/MatchWrap.Horizontal"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp">


                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/white"/>

                        <TextView
                            style="@style/WrapWrap"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:text="借款进度"
                            android:textColor="@color/white"/>


                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/white"/>

                    </LinearLayout>


                    <TextView
                        style="@style/WrapWrap"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@mipmap/icon_yuan"
                        android:gravity="center"
                        android:text="0%"
                        android:textColor="@color/white"/>

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/rl_msg"
                    android:layout_marginTop="10dp"
                    style="@style/MatchWrap"
                    android:background="@drawable/shap_guid_white"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:padding="10dp">

                    <TextView
                        style="@style/WrapWrap"
                        android:layout_marginStart="30dp"
                        android:drawableStart="@mipmap/icon_loan_msg"
                        android:drawablePadding="10dp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="@string/home_tab_information"/>

                    <ImageView
                        style="@style/WrapWrap"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:src="@mipmap/arrow"/>


                </RelativeLayout>


            </LinearLayout>

        </com.pingxundata.answerliu.pxcore.view.MyNestedScrollView>






    </LinearLayout>

</layout>